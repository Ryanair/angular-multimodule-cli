{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "templates/**/*"
  ],
  "files": [
    "src/index.ts",
    "typings.d.ts"
  ]
}
