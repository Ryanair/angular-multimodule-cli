{
  "name": "[SCOPE]/[NAME]",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "ts-node ./build/index.ts",
    "precommit": "lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "ci": "yarn run test:coverage && yarn lint && yarn stylelint && yarn run build",
    "clean": "git clean -xdf && yarn && yarn run bootstrap",
    "cli": "ng",
    "cz": "git cz",
    "lint": "tslint -e \\**/node_modules/**\\ --type-check --project tsconfig.json",
    "prettier": "prettier --parser typescript --single-quote --trailing-comma es5 --write \"./modules/**/*.ts\"",
    "release": "lerna publish --skip-npm --conventional-commits && npm run build",
    "stylelint": "stylelint modules/**/*.scss",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "prettier --single-quote --write",
      "git add"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "keywords": [
    "angular"
  ],
  "author": "",
  "license": "MIT",
  "repository": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@angular/animations": "^4.4.3",
    "@angular/cli": "^1.4.3",
    "@angular/common": "^4.4.3",
    "@angular/compiler": "^4.2.0",
    "@angular/compiler-cli": "^4.4.3",
    "@angular/core": "^4.4.3",
    "@angular/forms": "^4.4.3",
    "@angular/http": "^4.4.3",
    "@angular/platform-browser": "^4.2.0",
    "@angular/platform-browser-dynamic": "^4.4.3",
    "@angular/platform-server": "^4.4.3",
    "@angular/router": "^4.2.0",
    "@types/autoprefixer": "^6.7.3",
    "@types/fs-extra": "^4.0.2",
    "@types/glob": "^5.0.32",
    "@types/jest": "^21.1.1",
    "@types/node": "^8.0.31",
    "@types/node-sass": "^3.10.32",
    "@types/ora": "^1.3.1",
    "@types/rimraf": "^2.0.2",
    "autoprefixer": "^7.1.4",
    "codelyzer": "^3.2.0",
    "commitizen": "^2.9.6",
    "conventional-changelog": "^1.1.5",
    "core-js": "^2.5.1",
    "cpy-cli": "^1.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "deep-freeze": "^0.0.1",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "hammerjs": "^2.0.8",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "jest-preset-angular": "^3.0.2",
    "jest-zone-patch": "^0.0.8",
    "lerna": "^2.2.0",
    "lint-staged": "^4.2.3",
    "module-alias": "^2.0.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.3",
    "node-sass-tilde-importer": "^1.0.0",
    "ora": "^1.3.0",
    "postcss": "^6.0.12",
    "prettier": "^1.7.0",
    "protractor": "~5.1.2",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "rxjs": "^5.4.3",
    "sorcery": "^0.10.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.7.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "ts-node": "^3.3.0",
    "tslib": "1.7.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2",
    "uglify-js": "^2.8.22",
    "zone.js": "^0.8.17"
  },
  "dependencies": {
    "@angular/cdk": "^2.0.0-beta.11",
    "@types/ncp": "^2.0.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html",
      "json"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^@ngrx/(?!db)(.*)": "<rootDir>/modules/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "modulePathIgnorePatterns": [
      "dist",
      ".tmp"
    ],
    "collectCoverageFrom": [
      "modules/**/*.ts",
      "!modules/**/index.ts",
      "!modules/**/public_api.ts",
      "!modules/**/*.module.ts"
    ]
  }
}
